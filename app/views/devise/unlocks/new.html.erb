<% content_for :title, t(".heading") %>

<%= render("waste_exemptions_engine/shared/back", back_path: new_user_session_path) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-l"><%= t(".heading")  %></h1>

    <p class="govuk-body"><%= t(".prompt_1") %></p>

    <p class="govuk-body">Tell us which email address was used to register and weâ€™ll send unlock instructions.</p>

    <%= form_for(
        resource,
        as: resource_name,
        url: unlock_path(resource_name),
        html: { method: :post },
        builder: GOVUKDesignSystemFormBuilder::FormBuilder) do |f| %>

      <%= render("waste_exemptions_engine/shared/errors", object: resource) %>

      <%= f.govuk_email_field :email, width: "one-half" %>

      <%= f.govuk_submit t(".submit") %>
    <% end %>
  </div>
</div>
