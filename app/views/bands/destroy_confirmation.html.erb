<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">
    <%= render("waste_exemptions_engine/shared/back", back_path: bands_path) %>
    <h1 class="govuk-heading-l"><%= "Are you sure you want to remove this band?" %></h1>
    <p class="govuk-body"> <%= "You will lose all the information associated with this band" %> </p>
    <%= form_for @band,
      url: band_path(@band),
      html: { method: :delete },
      builder: GOVUKDesignSystemFormBuilder::FormBuilder do |f| %>
      <%= f.govuk_submit "Remove" %>
    <% end %>
  </div>
</div>
