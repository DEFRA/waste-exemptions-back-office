<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">
    <%= render("waste_exemptions_engine/shared/back",
              back_path: registration_payment_details_path(reference: @resource.reference)) %>
  </div>
</div>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-l">
      <%= t(".heading", reference: @resource.reference) %>
    </h1>

    <%= form_tag new_registration_charge_adjustment_path(registration_reference: @resource.reference), method: :get do %>
      <%= render partial: "waste_exemptions_engine/shared/error_summary" if flash[:error].present? %>

      <div class="govuk-form-group">
        <fieldset class="govuk-fieldset">
          <legend class="govuk-fieldset__legend govuk-fieldset__legend--m">
            <%= t(".legend") %>
          </legend>

          <div class="govuk-radios">
            <div class="govuk-radios__item">
              <%= radio_button_tag "adjustment_type", "increase", false, class: "govuk-radios__input" %>
              <%= label_tag "adjustment_type_increase", t(".increase_label"), class: "govuk-label govuk-radios__label" %>
              <div class="govuk-hint govuk-radios__hint">
                <%= t(".increase_hint") %>
              </div>
            </div>

            <div class="govuk-radios__item">
              <%= radio_button_tag "adjustment_type", "decrease", false, class: "govuk-radios__input" %>
              <%= label_tag "adjustment_type_decrease", t(".decrease_label"), class: "govuk-label govuk-radios__label" %>
              <div class="govuk-hint govuk-radios__hint">
                <%= t(".decrease_hint") %>
              </div>
            </div>
          </div>
        </fieldset>
      </div>

      <%= submit_tag t(".continue"), class: "govuk-button" %>
    <% end %>
  </div>
</div>
