<%= render("waste_exemptions_engine/shared/back", back_path: registration_path(reference: @resource.reference)) %>

<h1 class="govuk-heading-l">
  <%= t(".heading") %>
</h1>

<% if @change_history.present? %>
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
      <table class="govuk-table" aria-label="<%= t(".heading") %>">
        <thead class="govuk-table__head">
          <tr class="govuk-table__row">
            <th class="govuk-table__header" scope="col"><%= t(".date") %></th>
            <th class="govuk-table__header" scope="col"><%= t(".changed_to") %></th>
            <th class="govuk-table__header" scope="col"><%= t(".changed_from") %></th>
            <th class="govuk-table__header" scope="col"><%= t(".reason_for_change") %></th>
            <th class="govuk-table__header" scope="col"><%= t(".changed_by") %></th>
          </tr>
        </thead>
        <tbody class="govuk-table__body">
          <% @change_history.each do |version| %>
            <%= render "change_history_section", version: version %>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
<% end %>

<%= link_to t(".view_registration"), registration_path(@resource.reference), class: "govuk-button" %>