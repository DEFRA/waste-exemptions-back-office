<% content_for :title, t(".heading") %>

<%= render("shared/error", error: flash[:error], details: flash[:error_details]) if flash[:error].present? %>

<h1 class="govuk-heading-l">
  <%= t(".heading") %>
</h1>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_for(
        @deregistration_email_exports_form,
        url: deregistration_email_exports_path,
        builder: GOVUKDesignSystemFormBuilder::FormBuilder) do |f| %>

      <%= render partial: "waste_exemptions_engine/shared/error_summary", locals: { f: f } %>

      <%= f.govuk_text_field :batch_size,
          width: "one-half",
          label: { text: t(".batch_size") } %>

      <%= f.govuk_submit t(".submit") %>
    <% end %>
  </div>
</div>
