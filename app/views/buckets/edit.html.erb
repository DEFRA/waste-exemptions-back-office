<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">
    <%= render("waste_exemptions_engine/shared/back", back_path: bands_path) %>

    <%= form_for @bucket,
                 url: bucket_path(@bucket),
                 html: { method: :patch },
                 builder: GOVUKDesignSystemFormBuilder::FormBuilder do |f| %>

      <%= render partial: "waste_exemptions_engine/shared/error_summary", locals: { f: f } %>

      <h1 class="govuk-heading-l">
        <%= t(".heading", bucket_name: @bucket.name.downcase) %>
      </h1>

      <%= f.fields_for :initial_compliance_charge do |f| %>
        <%= render("shared/charge", form: @bucket.initial_compliance_charge, field: "initial_compliance_charge", f: f, prefix: "bucket-initial-compliance-charge") %>
      <% end %>

      <%= f.govuk_submit t(".submit_button") %>
    <% end %>
  </div>
</div>
