<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">
    <%= render("waste_exemptions_engine/shared/back", back_path: bands_path) %>

    <%= form_for @bucket,
                 url: bucket_path(@bucket),
                 html: { method: :patch },
                 builder: GOVUKDesignSystemFormBuilder::FormBuilder do |f| %>

      <%= render partial: "waste_exemptions_engine/shared/error_summary", locals: { f: f } %>

      <h1 class="govuk-heading-l">
        <%= t(".heading", bucket_name: @bucket.name.downcase) %>
      </h1>

      <%= f.govuk_text_field :charge_amount,
          width: "one-quarter",
          label: { text: t(".fields.charge_amount"),
          pattern: "[0-9]*",
          inputmode: "numeric" } %>

      <%= f.govuk_submit t(".submit_button") %>
    <% end %>
  </div>
</div>
