<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">
    <%= form_for resource,
                 as: resource_name,
                 url: invitation_path(resource_name),
                 html: { method: :put},
                 builder: GOVUKDesignSystemFormBuilder::FormBuilder do |f| %>

      <%= render partial: "waste_exemptions_engine/shared/error_summary", locals: { f: f } %>
      <h1 class="govuk-heading-l">
        <%= t(".heading") %>
      </h1>

      <p class="govuk-body">
        <%= t(".paragraph_1") %>
      </p>

      <%= f.hidden_field :invitation_token %>

      <%= f.govuk_password_field :password,
          label: { text: t(".password_label") },
          width: 20 %>

      <%= f.govuk_password_field :password_confirmation,
          label: { text: t(".password_confirmation_label") },
          width: 20 %>

      <%= f.govuk_submit t(".submit_button") %>
    <% end %>
  </div>
</div>
