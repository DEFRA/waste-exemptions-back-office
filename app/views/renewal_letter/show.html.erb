      font-weight:normal;
      margin-bottom:6pt;
    }

    p.list_intro {
      margin-bottom:0;
    }

    span.bold_text {
      font-weight:bold;
    }

    #page_wrapper {
      margin:0;
      margin-bottom:20mm;
    }

    #logo {
      position: absolute;
      top: 0;
      right: 0;
    }

    /* DL envelopes
    The window starts 56mm from the top and is 39mm deep.
    It starts 18mm from left and is 92mm wide.
    */

    #address_window {
      position: absolute;
      top: 40mm;
      left: 5mm;
    }

    #date {
      position: absolute;
      top: 40mm;
      right: 0mm;
    }

    #address_window p {
    line-height: 1.2;
    }

    #letter_body {
